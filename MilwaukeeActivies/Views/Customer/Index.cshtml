@model List<Activities>
@{
    ViewData["Title"] = "FilteredIndex";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
    <div class="text-center">
        <h1 style="text-shadow:2px 2px 4px #000000" class="display-4">Welcome to Milwaukee Activities!</h1>
        <br />
        <p>Here's some things that are going on around you that match your interests!</p>
        <br />
        
        <div style="text-align:center;"><a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("AllActivities", "Customer")'">View All Activities</a></div>
        <br />
    </div>
 

<div class="container" style="margin-top:30px">
    <div class="row">

        <div class="col-sm-1"></div>
        <div class="col-md-10">


            @foreach (var d in Model)
            {
                <div class="card" style="">
                    <img class="card-img-top" src="images/bg.PNG" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@d.EventName</h5>
                        <p class="card-text"> @d.Description @d.Company -  At @d.Address Cost: @d.Price Date: @d.Date</p>
                        <input type="button" value="View" onclick="location.href='@Url.Action("ActivityDetails", "Customer", new {id = d.ActivityId})'" />
                        <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("AddFavorites", "Customer" , new { id = ViewBag.UserId, activityId = d.ActivityId})'">Favorite</a>
                        <a href="#" class="btn btn-primary, float-right" onclick="location.href='@Url.Action("ViewReviews", "Customer" , new { activityId = d.ActivityId})'">View Reviews</a>
                    </div>


                </div>
                <br>
            }


            <div class="col-sm-1"></div>


        </div>
        

    </div>



</div>
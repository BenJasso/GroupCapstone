@model List<MilwaukeeActivies.Models.Review>

@{
    var ActivityId = ViewBag.ActivityId;
    ViewData["Title"] = "ViewReviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewReviews</h1>

<div>
    <h4>Review</h4>
    <hr />

    @if (Model.Count == 0)
    {
        <h1>There are no Reviews for this Activity</h1>
    }
    else
    {
        @foreach (var item in Model)
        {


            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Comment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Comment)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Rating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Rating)
                </dd>

            </dl>
        }
    }
   
</div>
<div>
   
    <a asp-action="Index">Back to List</a>
</div>
